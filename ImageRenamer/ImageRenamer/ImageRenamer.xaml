<UserControl x:Class="ImageTools.ImageRenamer.ImageRenamer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local ="clr-namespace:ImageTools.ImageRenamer"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300" >

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="53*" />
            <ColumnDefinition Width="22*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel>
            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Height="30px">
                <TextBox Width="170" VerticalAlignment="Center" Name="initFolder" Text="{Binding Path=InitDir, Mode=TwoWay}" ></TextBox>
                <Button Name="selectFolder" Margin="10px 0 0 0" Padding="10px 0" Click="selectFolder_Click">...</Button>
            </StackPanel>
            <CheckBox Name="useSubFolders" Height="15px" IsChecked="{Binding Path=IncludeSubDirs, Mode=TwoWay}">Include subfolders</CheckBox>
        </StackPanel>
        <ListView Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Name="lv_files" Margin="0 10px 0 0">
        </ListView>
        <StackPanel Grid.Column="1" Grid.Row="0">
            <Button Margin="5px" VerticalAlignment="Stretch">Hello</Button>
        </StackPanel>
    </Grid>
</UserControl>
