<Window x:Class="ImageTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:imageRenamer="clr-namespace:ImageTools.ImageRenamer"
       
        Title="MainWindow" Height="352" Width="804">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="20px"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Margin="10px" >
            <imageRenamer:ImageRenamer></imageRenamer:ImageRenamer>
        </Border>
        <StatusBar Grid.Row="1" >
            <StackPanel Orientation="Horizontal">
                <TextBlock>Progress:</TextBlock>
                <ProgressBar Name="_progress" Value="{Binding Path=Progress}" Width="100pt" Height="10pt" Margin="10pt 1pt 0 1pt"/>
            </StackPanel>
        </StatusBar>
    </Grid>
</Window>
